<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head', {title: head_title}) %>
    <link rel="stylesheet" href="stylesheets/style.css">
</head>
<body>

    <header id="top">
        <%- include('partials/header') %>
    </header>

    <main>
        <section class="container">
    <section class="info">
        <h1>Colección de películas de <%= userName %></h1>
    </section>
    <div>
        <% if (imagenes && imagenes.length > 0) { %>
            <% imagenes.forEach(imagen => { %>
                <div>
                    <a href="/data/<%= imagen.id %>">
                        <img src="<%= imagen.url %>" alt="<%= imagen.title %>">
                        <h3><%= imagen.title %></h3>
                    </a>
                </div>
            <% }); %>
        <% } else { %>
            <h2>No tienes películas en tu colección.</h2>
        <% } %>
    </div>
</section>

    </main>

    <footer>
        <%- include('partials/footer') %>
    </footer>

    <script src="/javascripts/script.js"></script>
    
</body>
</html>
